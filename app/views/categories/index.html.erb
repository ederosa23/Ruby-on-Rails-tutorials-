<h1 align="center">Listing All categories</h1>

<div align="center"
  <%= will_paginate %>
  <% @categories.each do |category| %>
    <UL class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4"
          <li class="article-title">
            <%= link_to "#{category.name}", category_path(category) %>
          </li>
        </div>
      </div
    </UL>
  <% end %>
  <%= will_paginate %>
</div>